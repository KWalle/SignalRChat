<Window x:Class="WpfChat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Supercool signalr chat" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="75"></ColumnDefinition>
            <ColumnDefinition Width="300"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.Column="0">Din beskjed:</Label>
        <TextBox x:Name="Message" Grid.Row="0" Grid.Column="1"></TextBox>
        <Button x:Name="BtnSend" Grid.Row="0" Grid.Column="2" Content="Send beskjed"></Button>
        <TextBlock x:Name="Messages" Grid.Row="1" Grid.ColumnSpan="3" Background="LightGoldenrodYellow"></TextBlock>
    </Grid>
</Window>
